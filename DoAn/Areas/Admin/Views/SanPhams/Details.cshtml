<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Admin/sanphams">Quản lý sản phẩm</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><b>Thông tin sản phẩm</b></h3>

            <div class="card-tools">
                <a href="/admin/sanphams/edit/@Model.masp" class="btn btn-primary">Chỉnh sửa</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-5" style="display: flex; justify-content: center; align-items: center;">
                    <img src="@Url.Content("~/wwwroot/images/" + Model.hinhanh)" class="img-rounded" width="500" height="500" />
                </div>
                <div class="col-sm-7" style="display: flex; justify-content: center; align-items: center;">
                    <div class="card shadow">
                        <div class="card-header">
                            <h3 class="card-title"><b>Thông số kỹ thuật</b></h3>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <td>Màn hình</td>
                                        <td>OLED 1 tỷ màu, 144Hz, 1400nits, 6.74 inches 1.5K</td>
                                    </tr>
                                    <tr>
                                        <td>Độ phân giải</td>
                                        <td>1240 x 2772 pixels</td>
                                    </tr>
                                    <tr>
                                        <td>Công nghệ màn hình</td>
                                        <td>Cảm ứng điện dung đa điểm</td>
                                    </tr>
                                    <tr>
                                        <td>RAM</td>
                                        <td>8-16GB, LPDDR5X</td>
                                    </tr>
                                    <tr>
                                        <td>Bộ nhớ</td>
                                        <td>256-512GB, 1TB, UFS 3.1</td>
                                    </tr>
                                    <tr>
                                        <td>Chất liệu</td>
                                        <td>Thép</td>
                                    </tr>
                                    <tr>
                                        <td>Kích thước</td>
                                        <td>163.9 x 75.8 x 8.95 mm</td>
                                    </tr>
                                    <tr>
                                        <td>Trọng lượng</td>
                                        <td>193.1 g</td>
                                    </tr>
                                    <tr>
                                        <td>Camera</td>
                                        <td>16 MP, f/2.45, 25mm 82.3° HDR, panorama. Quay phim: 1080p@30fps</td>
                                    </tr>
                                    <tr>
                                        <td>Pin</td>
                                        <td>Li-Po 5500 mAh Sạc nhanh 100W</td>
                                    </tr>
                                    <tr>
                                        <td>CPU</td>
                                        <td>Qualcomm SM7475-AB Snapdragon 7+ Gen 2, 4 nm 8 nhân 1x2.91 GHz &amp; 3x2.49 GHz &amp; 4x1.8 GHz. GPU: Adreno 725</td>
                                    </tr>
                                    <tr>
                                        <td>Chip</td>
                                        <td>Adreno 725</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>












